.row.restaurant
  .col-md-3
    %h1= @restaurant.name
    %p
      Address:
      = @restaurant.address
    =link_to "back", root_path, class: "btn btn-primary"
    =link_to "Edit", edit_restaurant_path, class: "btn btn-primary"
    =link_to "Delete", restaurant_path, method: :delete, data: { confirm: "Sure?" }, class: "btn btn-primary"
  .col-md-9
    %p.restaurant-description= @restaurant.description
.row.restaurant
  .col-md-12
    .restaurant-header
      %h2 Your mind is important, do you like this?
    %hr

    %form
      %fieldset.form-group
        %label Author
        %input.form-control
      %fieldset
        %label Content
        %textara.form-control
      %br
      %button.btn.btn-primary Submit

    %hr

    %ul.comments
      - @comments.each do |comment|
      %li  = react_component('Comment', {author: comment.author, body: comment.body, rank: comment.rank})

